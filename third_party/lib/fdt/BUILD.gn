config("fdt_config") {
  visibility = [ ":fdt" ]
  include_dirs = [ "include" ]
}

module("fdt") {
  public_configs = [ ":fdt_config" ]
  cflags = [ "-Wno-sign-compare" ]
  public = [
    "include/fdt.h",
    "include/fdt_env.h",
    "include/libfdt.h",
  ]
  sources = [
    "fdt.c",
    "fdt_addresses.c",
    "fdt_empty_tree.c",
    "fdt_ro.c",
    "fdt_rw.c",
    "fdt_strerror.c",
    "fdt_sw.c",
    "fdt_wip.c",
  ]
  deps = [
    "//kernel/lib/libc",
  ]
}
